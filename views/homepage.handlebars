{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>Post Title: {{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <h2>Content: {{post.content}}</h2>
  </div>
  <div class="col-md-6">
    <h5>Made by: {{post.user_id}}</h5>
  </div>
</div>
{{/each}}
